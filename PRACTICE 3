#include <iostream>
using namespace std;
void func() {
    cout << "Function called" << endl;
}

int main() {
    int number;
    cout << "Enter a number: " << endl;
    cin >> number;

    if (number % 2 == 0) {
        cout << "The number is even" << endl; 
    } 
    else {
        cout << "The number is odd" << endl; 
    }
    cout << endl;
    for (int i = 0; i < 10; i++) 
    {
        cout << i << endl;
    }
    cout << endl;
    string name = "John"; 
    cout << "Hello ! " << name << endl;
    cout << endl;

    int arr[5] = {1, 2, 3, 4, 5};
    for (int i = 0; i < 5; i++) 
    { 
        cout << arr[i] << " " << endl;;
    }
    cout << endl;
    func();
    cout <<endl;
    return 0;
}
