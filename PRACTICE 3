#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Enter a number: " << endl;
    cin >> number // Error 1: Missing semicolon

    if (number % 2 == 0) {
        cout << "The number is even" << endl // Error 2: Missing semicolon
    } else
        cout << "The number is odd" << endl; // Error 3: Missing curly braces for else block

    for (int i = 0; i < 10; i++) // Error 4: Missing curly braces for for loop
        cout << i << endl;
    
    string name = John; // Error 5: Missing quotes around string
    cout << "Hello, " << name << endl;

    int arr[5] = {1, 2, 3, 4, 5};
    for (int i = 0; i <= 5; i++) { // Error 6: Out of bounds array access
        cout << arr[i] << " ";
    }
    cout << endl;

    int* ptr = nullptr;
    *ptr = 10; // Error 7: Dereferencing a null pointer

    int x = "Hello"; // Error 8: Assigning string to integer

    cout << "Value of y is: " << y << endl; // Error 9: Using an uninitialized variable

    int arr2[5];
    arr2[10] = 0; // Error 10: Array index out of bounds

    void func(); // Error 11: Function declaration without a definition
    func();

    return 0 // Error 12: Missing semicolon
}
