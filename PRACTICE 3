#include <iostream>
using namespace std;
void func() {
    cout << "Function called" << endl;
}

int main() {
    int number;
    cout << "Enter a number: ";
    cin >> number;

    if (number % 2 == 0) {
        cout << "The number is even" << endl; 
    } 
    else {
        cout << "The number is odd" << endl; 
    }
    cout << endl;
    cout << "COUNTING FROM 1 TO 10" <<endl;
    for (int i = 0; i < 10; i++) 
    {
        cout << i << endl;
    }
    cout << endl;
    cout << "Print String name" << endl;
    string name = "John"; 
    cout << "Hello ! " << name << endl;
    cout << endl;
    cout << "COUNTING FROM 1 TO 5" <<endl;
    int arr[5] = {1, 2, 3, 4, 5};
    for (int i = 0; i < 5; i++) 
    { 
        cout << arr[i] << " " << endl;;
    }
    cout << endl;
    cout << "CALLING FUNCTION" <<endl;
    func();
    cout <<endl;
    return 0;
}
